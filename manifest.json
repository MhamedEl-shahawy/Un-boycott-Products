{
  "manifest_version": 3,
  "name": "Search Results Filter",
  "version": "1.3",
  "description": "Filters specific products from search results",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*",
        "*://*.bing.com/*",
        "*://*.yahoo.com/*",
        "*://*.duckduckgo.com/*",
        "*://*.baidu.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
} 